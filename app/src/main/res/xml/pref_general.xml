<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/app_name"
        android:inputType="textCapWords"
        android:key="folder_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />

    <ListPreference
        android:key="choosing_cropping"
        android:title="Crop Option"
        android:summary="@string/pref_description_choosing_cropping"
        android:entries="@array/cCrop"
        android:entryValues="@array/cCropValues"
        android:defaultValue="1"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />

</PreferenceScreen>
